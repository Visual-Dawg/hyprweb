.bg-box {
    transition: all 0.5s ease-in-out;
    transform: scale(0.5);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 0.1px;
    height: 0.1px;
    border-radius: 50%;
    box-shadow: 0 0 2000px 500px rgba(45, 45, 94, 1.0); /* Changed the shadow parameters */
    z-index: -1;
    backdrop-filter: blur(10px);
    opacity: 0;
}
.bg-box.show {
    opacity: 1; /* Change opacity to 1 to show the box */
    transform: scale(1); /* Scale the box back to its original size */
}
<script>
				function showBox() {
					const box = document.querySelector('.bg-box');
					setTimeout(() => {
						box.classList.add('show');
					}, 600); // Add the show class after a delay of 1 secon
				}
			</script>

